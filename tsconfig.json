{
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "./",
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "lib",
    "jsx": "react",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "es2015.promise",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "./config/typescript/**/*",
    "./src/**/*"
  ],
  "exclude": [
    "./@types"
  ]
}
