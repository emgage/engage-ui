{
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "./",
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./lib/@types",
    "jsx": "react",
    "allowJs": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "es2015.promise",
      "dom.iterable",
      "scripthost"
    ],
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ],
    "outDir": "./lib"
  },
  "include": [
    "./config/typescript/**/*",
    "./src/**/*",
    "./typings/*"
  ],
  "exclude": [
    "./@types",
    "./src/components/ReactDataGrid/"
  ]
}
