{
  "extends": [
    "tslint-config-airbnb"
  ],
  "rules": {
    "no-for-in-array": false,
    "no-inferred-empty-object-type": false,
    "restrict-plus-operands": false,
    "max-line-length": [
      false
    ],
    "variable-name": [
      true,
      "allow-pascal-case"
    ],
    "indent": [
      true,
      "spaces",
      2
    ],
    "no-increment-decrement": false,
    "no-trailing-whitespace": [
      true,
      "ignore-comments"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        }
      }
    ]
  }
}
